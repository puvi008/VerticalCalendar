<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.jpttrindade.calendaviewsample.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:onClick="showDatePickerDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/floatingActionButton"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <br.com.jpttrindade.calendarview.view.CalendarView
        android:id="@+id/calendarView"
        app:dayHeight="@dimen/_43sdp"
        app:dayWidth="@dimen/_43sdp"
        app:todayCircleSize="37dp"
        app:weekdayNameHeight="24dp"
        app:monthLabelHeight="24dp"
        app:monthLabelSize="14sp"
        app:monthDividerSize="@dimen/_80sdp"
        app:todayCircleColor="@color/colorPrimary"
        app:eventCircleColor="#efa1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:weekEndDifferenctColor="true"
        app:weekEndColor="@color/font_1"
        app:weekdayNameBackgroundColor="@color/font_2"
        app:weekLabelColor="@color/white"
        app:weekLabelFormat="format_s"
        app:markEveryFirstofMonth="true"
        app:minDate="03/08/2017"
        app:maxDate="03/03/2021"
        app:daySpace="20"
        app:dayblockedcolor="@color/font4"

        >

    </br.com.jpttrindade.calendarview.view.CalendarView>
</RelativeLayout>

